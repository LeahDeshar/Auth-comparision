generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int              @id @default(autoincrement())
  email      String           @unique
  password   String
  name       String
  role       Role             @default(USER)
  createdAt  DateTime         @default(now())
  profilePic CloudinaryImage? @relation("UserProfilePic")
  profilePicId Int?           @unique
  posts      Post[]
}

model Post {
  id        Int              @id @default(autoincrement())
  title     String
  content   String
  published Boolean          @default(false)
  authorId  Int
  author    User             @relation(fields: [authorId], references: [id])
  createdAt DateTime         @default(now())
  postImage CloudinaryImage? @relation("PostImage")
  postImageId Int?           @unique
}

model CloudinaryImage {
  id        Int    @id @default(autoincrement())
  url       String
  user      User?  @relation("UserProfilePic", fields: [userId], references: [id])
  userId    Int?   @unique
  post      Post?  @relation("PostImage", fields: [postId], references: [id])
  postId    Int?   @unique
}

enum Role {
  USER
  ADMIN
}
